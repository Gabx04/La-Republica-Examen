mixin avances(tema, titular, clasenoticia)
	.avance
		p.tema-avance= tema
		a(class= clasenoticia, href="#")
			p.titular-avance= titular
			.sombra
		p.todosobre Todo sobre
			span #{tema}
mixin reciente(tituloreciente, src, contenidoreciente)
	.noticiareciente
		p.horapublicacion Hace 1 hora 12 mins
		p.titulo-reciente= tituloreciente
		.imagen-noticia
			img(src= src, alt="foto noticia")
		.contenido
			p= contenidoreciente
mixin emma()
	+reciente(tituloemma, "assets/image/img_news.jpg", contenidoemma)
mixin roque()
	+reciente(tituloroque, "assets/image/un-image--thumb-01.jpg", contenidoroque)
mixin notayt()
	+reciente(tituloyt, "assets/image/img_sd_mascota.jpg", contenidoemma)
mixin realmadrid()
	+reciente(titulorealmadrid, "assets/image/img_video_destacado.jpg", contenidorealmadrid)




































































































































































































mixin cajapost(titulo, src, name, post)
	div.post
		div.title
			h6 Lunes, 14 de julio de 2015
			a(href="#")
				h4= titulo     
		div.blogger
			div.autor
				a(href="#")
					img(src= src)
			div.libros
				h3= name
				a(href="#")
					h4= post
mixin blogger(src, name, post)
	div.blogger.parche
		div.autor
			a(href="#")
				img(src= src)
		div.libros
			h3= name
			a(href="#")
				h4= post              
mixin title(name, descripcion)
	h2= name
	h3.descrip= descripcion
		i.fa.fa-angle-double-down





